<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Movie App</title>
    <!-- load local stylesheet (css) -->
    <link rel="stylesheet" href="/styles.css" />
    <!-- loading jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <h1>List of <%= listDescription %></h1>

    <ul>
        <% list.forEach( (elt) => {%>
        <li><%= elt.title %></li>
        <li><%= elt.release %></li>
        <% elt.cast.forEach((cast_member) => { %>
        <li><a href=/nm/<%= cast_member.nm %>><%= cast_member.name %></a></li>
        <% }); %>
        <% }); %>
    </ul>
    <!-- load local js -->
    <script src="/main.js"></script>
</body>
</html>
